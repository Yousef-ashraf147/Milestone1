<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home</title>
</head>

<body>
    Welcome Instructor
    <% if(courses!=null) { %>
        <% courses.forEach(function(item){ %>
            <div>Course Title: <%= item.title%>
            </div>
            <div>Course Subtitle: <%= item.subtitle %>
            </div>
            <div>Course Price: <%= item.price * offset %>
                    <%= currency %>
            </div>
            <div>Course Summary: <%= item.summary %>
            </div>
            <div>Course Total Hours: <%= item.totalHours %>
            </div>
            <div>Course Rating: <%= item.rating %>
            </div>
            <div>Course Subject: <%= item.subject %>
            </div>
            <div>Course Instructor: <%= item.instructor %>
            </div>
            <br>
            <br>
            <% }) %>
                <% } %>

                    <form action="addCourse" method="post">
                        <input placeholder="Course Title" name="title">
                        <input placeholder="Course Subject" name="subject">
                        <input placeholder="Course Total Hours" name="totalHours">
                        <input placeholder="Course Rating" name="rating">
                        <input placeholder="Course Summary" name="summary">
                        <input placeholder="Course Price" name="price">
                        <button>Add Course</button>
                    </form>
</body>

</html>